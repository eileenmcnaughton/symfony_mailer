<?xml version="1.0"?>
<extension key="symfony_mailer" type="module">
  <file>symfony_mailer</file>
  <name>symfony_mailer</name>
  <description>Symfony Mailer support for CiviCRM</description>
  <license>AGPL-3.0</license>
  <authors>
    <author>
      <name>Eileen McNaughton</name>
      <email>emcnaughton@wikimedia.org</email>
      <role>Maintainer</role>
    </author>
  </authors>
  <urls>
    <url desc="Main Extension Page">https://FIXME</url>
    <url desc="Documentation">https://symfony.com/doc/current/mailer.html#creating-sending-messages</url>
    <url desc="Support">https://FIXME</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-01-21</releaseDate>
  <version>1.0.0</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.78</ver>
  </compatibility>
  <smarty_compatibility>
    <ver>5</ver>
  </smarty_compatibility>
  <php_compatibility>
    <ver>8.1</ver>
    <ver>8.2</ver>
    <ver>8.3</ver>
    <ver>8.4</ver>
  </php_compatibility>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/SymfonyMailer</namespace>
    <format>24.09.1</format>
    <angularModule>crmSymfonyMailer</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty@1.0.3</mixin>
  </mixins>
</extension>
